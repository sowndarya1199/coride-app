<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Add your backend domain here if using HTTP -->
        <domain includeSubdomains="true">your-backend-domain.com</domain>
    </domain-config>
    <!-- HTTPS domains don't need cleartext permission -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">your-app-name.railway.app</domain>
        <domain includeSubdomains="true">your-app-name.onrender.com</domain>
        <domain includeSubdomains="true">your-app-name.vercel.app</domain>
    </domain-config>
</network-security-config>
